#!/bin/bash

# Configuration
INTERVAL=5 # seconds between checks
API_HOST="192.168.1.31"  # Change this to your Raspberry Pi's hostname/IP
API_PORT=80

# Function to check if video device is in use
check_device() {
    if lsof /dev/video0 > /dev/null 2>&1; then
        echo "true"
    else
        echo "false"
    fi
}

# Function to control the sign via API
control_sign() {
    state=$1
    curl -X POST \
        -d "{\"on_air\": $state}" \
        "http://$API_HOST:$API_PORT/"
}

# Main loop
while true; do
    on_air=$(check_device)
    if [ "$on_air" != "$prev_on_air" ]; then
        echo "Device state changed to: $on_air"
        control_sign $on_air  # Pass the return value to control the sign
        prev_on_air=$on_air
    fi
    sleep $INTERVAL
done