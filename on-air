#!/bin/bash

# Configuration
INTERVAL=5 # seconds between checks
API_HOST="192.168.1.31"  # Change this to your Raspberry Pi's hostname/IP
API_PORT=80
VIDEO_DEVICE="/dev/video0" # Linux video device path

# Function to check if video device is in use
check_device() {
    case "$(uname -s)" in
        Linux)
            if lsof "$VIDEO_DEVICE" > /dev/null 2>&1; then
                echo "true"
            else
                echo "false"
            fi
            ;;
        Darwin)
            # Apple Silicon camera in-use clients (reliable for active calls/apps).
            if ioreg -r -n AppleH16CamInUserClient 2>/dev/null | grep -qE 'IOUserClientCreator.*cameracaptured'; then
                echo "true"
            elif ioreg -r -n AppleH13CamInUserClient 2>/dev/null | grep -qE 'IOUserClientCreator.*cameracaptured'; then
                echo "true"
            # Fallback for other macOS builds exposing generic in-use flags.
            elif ioreg -r -l 2>/dev/null | grep -qE '("InUse" = (Yes|1|true)|"DeviceInUse" = (Yes|1|true)|"StreamRunning" = (Yes|1|true))'; then
                echo "true"
            # Legacy camera assistants.
            elif pgrep -x "VDCAssistant" > /dev/null 2>&1 \
                || pgrep -x "AppleCameraAssistant" > /dev/null 2>&1 \
                || pgrep -x "CMIOExtensionProvider" > /dev/null 2>&1; then
                echo "true"
            else
                echo "false"
            fi
            ;;
        *)
            echo "false"
            ;;
    esac
}

# Function to control the sign via API
control_sign() {
    state=$1
    curl -X POST \
        -d "{\"on_air\": $state}" \
        "http://$API_HOST:$API_PORT/"
}

# Main loop
while true; do
    on_air=$(check_device)
    if [ "$on_air" != "$prev_on_air" ]; then
        echo "Device state changed to: $on_air"
        if control_sign $on_air; then
            prev_on_air=$on_air
        fi
    fi
    sleep $INTERVAL
done
